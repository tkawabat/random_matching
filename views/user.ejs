<%
let sex_disabled = user.sex == null ? "" : "disabled"; 
let sex_m = user.sex === 'm' ? "checked" : "";
let sex_f = user.sex === 'f' ? "checked" : "";
%>

<h4 class="">ユーザー設定</h4>

<%- include("./module/user", {user:user}) %>

<div class="mt-5">
<form method="POST" action="/user/">
    <div class="form-group">
        性別：
        男&nbsp;<input type="radio" name="sex" value="m" required <%= sex_m %> <%= sex_disabled %>>&nbsp;
        女&nbsp;<input type="radio" name="sex" value="f" required <%= sex_f %> <%= sex_disabled %>>
        <p class="text-right text-secondary">※性別は決定すると変更できません。</p>
    </div>
    <div class="form-group form-inline mt-4">
        Skype：
        <input type="text" class="form-control" name="skype_id" placeholder="skype id" maxlength=64" required value="<%= user.skype_id %>">
    </div>
    <div class="mt-3 w-50 mx-auto">
        <a href="/entry/"><button type="button" class="btn btn-secondary mr-4">戻る</button></a>
        <button type="submit" class="btn btn-success">更新</button>
    </div>
</form>
</div>

<div class="mt-5 mb-5 text-right">
    <a href="/logout"><button type="button" class="btn btn-secondary">ログアウト</button></a>
</div>

