<h4>フランダースの負け犬</h4>

<% let start = moment(reserve.start_at).format("M/D (ddd) kk:mm~");%>
<div class="reserve ml-2 mt-3">
    <p>時間：<%=start%>　約<%=reserve.scenario.minutes%>分</p>
    <p>場所：Skype</p>
</div>

<div class="text-right">
    <%- include("./module/tweet", {text:"ただいまマッチング中...\n", hash:title}) %>
</div>


<h5>役表</h5>

<% for (let c of reserve.chara) { %>
<div class="chara clearfix">
    <div class="mb-2">
        <i class="fas fa-mars"></i>&nbsp;<%=c.name%>役
    </div>
    <% if (c.user) { %>
        <%- include("./module/user", {user:c.user}) %>

        <% if (user && c.user._id === user._id) { %>
            <form class="text-right" method="POST" action="/reserve/entry/cancel">
                <button type="button" class="btn btn-sm btn-danger">キャンセル</button>
            </form>
        <% } %>
    <% } else { %>
        <form class="ml-2" method="POST" action="/reserve/entry">
            <input type="hidden" name="chara" value="<%=c.name%>">
            <button type="submit" class="btn btn-success"><i class="fas fa-plus"></i></button>
        </form>
    <% } %>
</div>
<% } %>
