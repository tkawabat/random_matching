{
  "apps" : [
      {
          "name" : "dev",
          "script"    : "bin/www",
          "instances" : "max",
          "instance_var": "INSTANCE_ID",
          "exec_mode" : "cluster",
          "watch": ["./"],
          "ignore_watch" : ["node_modules", "log", "\.git", "public"],
          "watch_options": {
              "followSymlinks": false,
              "usePolling": true
          },
          "env" : {
              "PORT": 3452,
              "NODE_ENV" : "development"
          }
      },
      {
          "name" : "prod",
          "script"    : "bin/www",
          "instances" : "max",
          "instance_var": "INSTANCE_ID",
          "exec_mode" : "cluster",
          "env" : {
              "PORT": 443,
              "NODE_ENV" : "prod"
          }
      }
  ]
}
